@page
@model ViccAdatbazis.Pages.ViccekModel

@{
    ViewData["Title"] = "Viccek";
}

<h1>Viccek</h1>

<p>
    <a asp-page="UjVicc">Új Vicc Felvétele</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tartalom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Feltolto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tetszik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].NemTetszik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Aktiv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vicc) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tartalom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feltolto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tetszik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NemTetszik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktiv)
            </td>
            <td>
                <a asp-page="./Szerkesztes" asp-route-id="@item.Id">Szerkesztés</a> |
                <a asp-page="./Torles" asp-route-id="@item.Id">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
